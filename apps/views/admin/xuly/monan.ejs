<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Handle</title>
	<%- include ../layout/head %>
</head>
<body>
	<%- include ../layout/nav %>

	<div class="container">
	<div class="row" style="margin-bottom:10px">
		<div class="col-sm-12">
			<a href="/admin/monan/themmonan" class="btn btn-success pull-right">Thêm món ăn</a>
		</div>
	</div>
	</div>
	<div class="container">
	<div class="panel panel-default">
        <!-- <div class="panel-heading">
            Posts
        </div> -->
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Giá</th>
                            <th>Giới thiệu</th>
                            <th>Nguyên liệu</th>
                            <th>Bữa</th>
                            <th>Hình ảnh</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       <% if(data && data.cacmonan) {%>
                            <% for(var i = 0; i<data.cacmonan.length; i++) {%>
                                <tr>
                                    <td> <%= data.cacmonan[i].id %> </td>
                                    <td> <%= data.cacmonan[i].ten %> </td>
                                    <td> <%= data.cacmonan[i].gia %> </td>
                                    <td> <%= data.cacmonan[i].gioithieu %> </td>
                                    <td> <%- data.cacmonan[i].nguyenlieu %> </td>
                                    <td> <%= data.cacmonan[i].bua %> </td>

                                    <td> <img src="<%= data.cacmonan[i].hinhanh %>" alt="" class="responsive-img" width="150px" height="150px"> 
                                       
                                    </td>
                                    <td>
                                        <a href="/admin/monan/taianh/<%= data.cacmonan[i].id %>" class="btn btn-warning">Đổi ảnh</a>
                                        <a href="/admin/monan/suamonan/<%= data.cacmonan[i].id %>" class="btn btn-primary">Sửa thông tin</a>
                                        <button class="btn btn-danger monan_xoa" monan_id="<%= data.cacmonan[i].id %>">Xóa</button>
                                    </td>
                                </tr>
                            <%}%>
                       <%}%>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
     </div>
     </div>
     <script type="text/javascript" src="/static/js/edit.js"></script>
</body>
</html>